<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">
      <%= content_tag(:a, t('cities.show.geography'), :name => 'geography') %>
    </h2>
  </div>
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt>
	<%= t('cities.show.latitude') %>
      </dt>
      <dd>
	<%= info[:latitude] %>
      </dd>
      <dt>
	<%= t('cities.show.longitude') %>
      </dt>
      <dd>
	<%= info[:longitude] %>
      </dd>
      <dt>
	<%= t('cities.show.country') %>
      </dt>
      <dd>
	<%= link_to t(@city.country.name), [@city.country] %>
      </dd>
    </dl>
  </div>
</div>
