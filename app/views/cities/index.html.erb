<% content_for :head do %>
    <title><%= t(:title) %></title>
    <meta name="description" content="<%= t(:description) %>">
    <meta property="og:title" content="<%= t(:title) %>" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="<%= request.original_url %>" />
    <meta property="og:image" content="<%= image_url('countrypedia-logo.gif') %>" />
    <meta name="DC.Creator" content="Countrypedia" />
    <meta name="DC.Subject" scheme="DCTERMS.LCSH" content="<%= t(:title) %>" />
    <meta name="DC.Description" content="<%= t(:description) %>" />
    <meta name="DC.Type" scheme="DCTERMS.DCMIType" content="Text" />
    <meta name="DC.Format" scheme="DCTERMS.IMT" content="application/xhtml+xml" />
<% end %>
<%= render partial: "shared/nav" %>
<div class="jumbotron">
  <div class="row">
    <div class="col-md-8">
      <%= render partial: "shared/share", locals: {text: "Countrypedia"} %>
      <h1>Countrypedia</h1>
      <h2><%= t('world_cities') %></h2>
      <p><%= t(:description) %></p>
    </div>
    <div class="col-md-4">
      <%= image_tag(
	  'countrypedia-logo.gif', 
	  alt: 'Countrypedia', 
	  class: 'img-responsive', 
	  style: 'max-width: 300px;') %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= render partial: "shared/googleadsense", locals: {} %>
  </div>
  <div class="col-md-12">
    <%= render partial: "random", locals: {} %>
  </div>
  <div class="col-md-12">
    <%= render partial: "list", locals: {} %>
  </div>
</div>

