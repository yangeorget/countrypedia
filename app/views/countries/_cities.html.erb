<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">
      <%= content_tag(:a, t('countries.show.cities'), :name => 'cities') %>
    </h2>
  </div>
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt>
	<%= t('countries.show.capital') %>
      </dt>
      <dd>
	<%= info['capital'] %>
      </dd>
      <dt>
	<%= t('countries.show.largestcities') %>
      </dt>
      <dd>
	<ul class="list-unstyled">
	  <% @country.cities.each do |city| %>
	  <li>
	    <em>
	      <%= link_to(t(city.name), country_city_path(city.country, city)) %>
	    </em>
	  </li>
	  <% end %>
	</ul>
      </dd>
    </dl>
  </div>
</div>
