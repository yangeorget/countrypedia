<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t('countries.show.geography') %></h3>
  </div>
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt>
	<%= t('countries.show.subregion') %>
      </dt>
      <dd>
	<em><%= info['subregion'] %></em>
      </dd>
      <dt>
	<%= t('countries.show.region') %>
      </dt>
      <dd>
	<em><%= info['region'] %></em>
      </dd>
      <dt>
	<%= t('countries.show.borders') %>
      </dt>
      <dd>
	<%= raw(info['borders'].join(", ")) %>
      </dd>
    </dl>
    <script type="text/javascript">
      google.load("visualization", "1", { packages:["geochart"] });
      google.setOnLoadCallback(drawRegionsMap);
      function drawRegionsMap() {
      var data = google.visualization.arrayToDataTable(<%= raw(country.geochart_from_borders(info['borders'])) %>);
      var options = {};
      options['region'] = '<%= country.region_code %>';
      options['dataMode'] = 'regions';
      var container = document.getElementById('regions_div');
      var chart = new google.visualization.GeoChart(container);
      chart.draw(data, options);
      }
    </script>
    <div id="regions_div" style="width: 900px; height: 600px;"></div>
  </div>
</div>
