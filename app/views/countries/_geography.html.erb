<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">
      <%= content_tag(:a, t('countries.show.geography'), :name => 'geography') %>
    </h2>
  </div>
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt>
	<%= t('countries.show.area')  %> (km<sup>2</sup>)
      </dt>
      <dd>
	<%= info['area'] %>
      </dd>
      <dt>
	<%= t('countries.show.latitude') %>
      </dt>
      <dd>
	<%= info['latlng'][0] %>
      </dd>
      <dt>
	<%= t('countries.show.longitude') %>
      </dt>
      <dd>
	<%= info['latlng'][1] %>
      </dd>
      <dt>
	<%= t('countries.show.subregion') %>
      </dt>
      <dd>
	<em><%= info['subregion'] %></em>
      </dd>
      <dt>
	<%= t('countries.show.region') %>
      </dt>
      <dd>
	<em><%= info['region'] %></em>
      </dd>
      <dt>
	<%= t('countries.show.borders') %>
      </dt>
      <dd>
	<ul class="list-inline">
	  <% @country.borders(info['borders']).each do |country| %>
	  <li>
	    <%= link_to t(country.name), [country] %>
	  </li>
	  <% end %>
	</ul>
      </dd>
    </dl>
    <div class="embed-responsive embed-responsive-4by3">
      <iframe 
	 class="embed-responsive-item"
	 width="800" 
	 height="600" 
	 frameborder="0" 
	 style="border:0"
	 src="<%= Util::Google.maps_url(4, info['latlng'][0], info['latlng'][1]) %>" allowfullscreen>
      </iframe>
    </div>
  </div>
</div>
